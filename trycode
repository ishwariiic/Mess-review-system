userinfo=input("Are you a student or a mess owner")
print("Enter S if student or M if mess owner")
name=""
location=""
menu=""
mess_timings=0
avgwait=0
tiffin=0
crowd=""
if userinfo=="M":
    def show():
        print("Welcome,please fill out following details and update the menus")
        name=input("Enter the mess name")
        location=input("Enter the location ")
        menu= input("Enter today's menu")
        mess_timings=int(input("Enter the start time of today's lunch/dinner"))
        avgwait= int(input("Enter average waiting time"))
        tiffin= int(input("Enter T if Tiffin/takeout is available"))
        crowd= input("Is mess crowded or not(Y/N)")

elif userinfo=="S":
    show()
    print("Welcome student,please go through the questions")
    print(name, "mess","located in",location,"has the following menu",menu, "the mess timings starts from",mess_timings,"average waiting time is ",avgwait,"Tiffins service availability",tiffin)
